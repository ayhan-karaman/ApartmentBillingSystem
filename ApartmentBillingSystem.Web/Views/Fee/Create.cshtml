@model ApartmentBillingSystem.Domain.Entities.Fee
@{
    ViewData["Title"] = "Create Fee";
}

<h2>Create Fee</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="ApartmentId"></label>
        <select asp-for="ApartmentId" class="form-control" asp-items="@(new SelectList(ViewBag.Apartments, "Id", "Number"))">
            <option value="">Select Apartment</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Month"></label>
        <input asp-for="Month" class="form-control" type="month" />
    </div>
    <div class="form-group">
        <label asp-for="Amount"></label>
        <input asp-for="Amount" class="form-control" />
    </div>
    
    <button type="submit" class="btn btn-primary mt-3">Save</button>
</form>

