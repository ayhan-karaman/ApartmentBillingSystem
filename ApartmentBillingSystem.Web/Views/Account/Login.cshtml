@model ApartmentBillingSystem.Application.ViewModels.Auth.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}



<div class="col-4">
    <div class="card bg-transparent">
        <div class="card-body">
            <form method="post" asp-action="Login" asp-controller="Account" class="tm-login-form">
                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" type="text" placeholder="Email" class="form-control validate" id="email" required />
                </div>
                <div class="form-group mt-3">
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" type="password" placeholder="Password" class="form-control validate" id="password"  required />
                </div>
                <div class="form-group mt-4">
                    <button type="submit" class="btn w-100 btn-primary btn-block text-uppercase">
                        Login
                    </button>
                </div>
                <button class="mt-3 btn w-100 btn-primary btn-block text-uppercase">
                    Forgot your password?
                </button>
            </form>
        </div>
    </div>
</div>
